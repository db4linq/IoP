  .ui.segment
    h1.ui.header day/night time
    .ui.slider.checkbox
      input(type='checkbox', name='cycle')
      label active day/night cycle?
    p select the time the device is <b> online </b>
    #flat-slider-time-interval(style='margin-top: 24px')
    script(type='text/javascript').
      $("#flat-slider-time-interval")
          .slider({
              max: 24,
              min: 0,
              range: true,
              values: [2,12]
          })
          .slider("pips", {
              first: "pip",
              last: "pip"
          })
    .spacer(style='margin-top:5%')
    .ui.form
      .inline.fields
        label what should be deactivated when offline?
        .field
          .ui.checkbox
            input(type='checkbox', name='cycle')
            label Display
        .field
          .ui.checkbox

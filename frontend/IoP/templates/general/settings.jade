            label led-bar
        .field
          .ui.checkbox
            input(type='checkbox', name='cycle')
            label general leds
        .field
          .ui.checkbox
            input(type='checkbox', name='cycle')
            label email notification
    .ui.two.buttons
      .ui.basic.button.fluid.green Apply
      .ui.basic.button.fluid.red Reset

  .ui.segment
    h1.ui.header storage settings
    p how long should the data be sensor data be saved?
    #flat-slider-timer-interval(style='margin-top: 24px')
    .spacer(style='margin-top:7.5%')
    p#output You selected - plants
    #flat-slider-plants-interval(style='margin-top: 24px')
    script(type='text/javascript').
      $("#flat-slider-timer-interval")
          .slider({
            max: 13,
            min: 1,
            range: 'min',
            value: 2
          })
          .slider("pips", {
            first: "pip",
            last: 'label',
            labels: {'last': '&infin;', 'first': '1'}
          })
      $("#flat-slider-plants-interval")
        .slider({
          max: 100,
          min: 1,
          range: 'min',
          value: 2
        })
        .slider("pips", {
          first: "pip",
          last: "pip"
        })
        .on("slidechange", function(e,ui) {
          var text='';
          if (ui.value == 1) { text = 'plant'; } else { text = 'plants'; }
          $("#output").text( "You selected " + ui.value + " " + text);
        })
        .on("slide", function(e,ui) {
          var text='';
          if (ui.value == 1) { text = 'plant'; } else { text = 'plants'; }
          $("#output").text( "You selected " + ui.value + " " + text);
        });


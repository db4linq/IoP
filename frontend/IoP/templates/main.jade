    link(rel='stylesheet',href='{{url_for("static", filename="css/main.css")}}')

  body
    .ui.vertical.inverted.sticky.menu.fixed.top.iopsidebar
      .item
        .ui.header.inverted
          | Plants
        a.item.plant.marta(data-html="<div class='header'>Übersicht!</div><div class='content'><div style='display:flex;align-items:center'><svg style='margin-right:10px' height='20' width='20'><circle cx='10' cy='10' r='8' fill='#21ba45'></circle></svg>humidity<div style='flex-grow:1' /></div><div style='display:flex;align-items:center'> <svg style='margin-right:10px' height='20' width='20'><circle cx='10' cy='10' r='8' fill='#fbbd08'></circle></svg> temperature, light <div style='flex-grow:1' /></div><div style='display:flex;align-items:center'><svg style='margin-right:10px' height='20' width='20'><circle cx='10' cy='10' r='8' fill='#db2828'></circle></svg> moisture<div style='flex-grow:1' /></div></div>" onClick='goToPlant(this)')
          | Marta
          i.icon
            img(src='http://emojione.com/wp-content/uploads/assets/emojis/1f610.svg' style='width:24px')
        a.item.plant.paul(data-content="Add users to your feed" onClick='goToPlant(this)')
          | Paul
          i.icon
            img(src='http://emojione.com/wp-content/uploads/assets/emojis/1f618.svg' style='width:24px')

      a.item
        | Add Plant
        i.plus.icon

      .spacer(style='flex-grow:1')

      a.item
        | Manage Plants
        i.server.icon
      a.item.global_settings
        | Global Settings
        i.options.icon

    script(type='text/javascript').
      $('a.item.plant')
        .popup({
          position : 'right center',
          title    : 'Übersicht!'
        })
      ;

    .pusher
      .ui.segment.iopheader
        .information
          h1.ui.header Internet of Plants
          .spacer
          h1.ui.header.plant_header= content['current_active'].capitalize()
          - var button_style = 'display:none' if content['type'] != 'plant' else 'display:inherit'
          .ui.menu.secondary(style=button_style)
            a.horizontally.fitted.item(onClick='getPlantSettings()')
              i.setting.icon
        .ui.five.item.tabular.pointing.menu.mainMenu
          a.item.overview(onClick='getOverview();')
              | overview
          a.item.temperature(onClick='getSensor(this);')
              | temperature
          a.item.humidity(onClick='getSensor(this);')
              | humidity
          a.item.moisture(onClick='getSensor(this);')
              | moisture
          a.item.light(onClick='getSensor(this);')
              | light
      script(type='text/javascript').
        $(document).ready(function() {initSetTab("#{content['current']}")});
      section.mainContent
        block content




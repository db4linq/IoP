    script(defer, src='{{url_for("static", filename="js/jquery.min.js")}}')
    script(defer, src='{{url_for("static", filename="js/jquery-ui.min.js")}}')
    script(defer, src='{{url_for("static", filename="js/semantic.min.js")}}')
    script(defer, src='{{url_for("static", filename="js/main.js")}}')
